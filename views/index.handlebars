<div class="container">
  <section id="page-name">
    <h1>Eat-Da-Burger</h1>
  </section>
  <section class="row">
    <div class="col-md-6 col-left">
      <h3>TO BE DEVOURED</h3>
    </div>

    <div class="col-md-6 col-right">
      <h3>DEVOURED</h3>
    </div>
  </section>

  <section class="row">
    <div class="col-lg-6 col-left">
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}

    </div>
    <div class="col-lg-6 col-right">
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}

    </div>
  </section>

  <form class="create-form">

    <div class="form-group">
      <label for="burg">Burger:</label>
      <input type="text" id="burg" name="burger_name" rows="2" cols="40" placeholder="What do you want to eat?">
    </div>
    <button type="submit">Add Burger</button>
  </form>
</div>